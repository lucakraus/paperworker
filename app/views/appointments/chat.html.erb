<div class = "container">
<div class ="container chat">
  <h3>Send a message to <%= @appointment.paperworker.name %></h3>

  <div class = "messages">
    <% @appointment.messages.each do |message| %>
      <div id ="message-<%= message.id %>">
        <small>
          <strong><%= message.user.name %></strong>
          <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
        </small>
        <p><%= message.content %></p>
      </div>
    <% end %>
  </div>


  <%= simple_form_for [@appointment, @message],
    html: {class: "d-flex"} do |f|
  %>
    <%= f.input :content,
      label: false,
      placeholder: "Message ##{@appointment.paperworker.name}",
      wrapper_html: {class: "flex-grow-1"}
    %>
    <%= f.submit "Send", class: "btn2 btn-primary mb-3" %>
  <% end %>
</div>
</div>
